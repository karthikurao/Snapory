# ==============================================
# Snapory Environment Configuration Template
# ==============================================
# Copy this file to .env and fill in your values.

# ----- General -----
ENVIRONMENT=development
APP_NAME=Snapory

# ----- ASP.NET Core API -----
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000
API_PORT=5000

# ----- Next.js Frontend -----
NEXT_PUBLIC_API_URL=http://localhost/api
NEXTJS_PORT=3000

# ----- Python AI Service -----
AI_SERVICE_PORT=8000
PYTHON_ENV=development

# ----- OVH S3-Compatible Storage -----
S3_ENDPOINT=https://s3.gra.cloud.ovh.net
S3_REGION=gra
S3_BUCKET_NAME=snapory-photos
S3_ACCESS_KEY=your_access_key_here
S3_SECRET_KEY=your_secret_key_here
S3_USE_SSL=true

# For local MinIO testing (alternative):
# S3_ENDPOINT=http://minio:9000
# S3_BUCKET_NAME=snapory-photos
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_USE_SSL=false

# ----- Redis -----
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CONNECTION_STRING=redis:6379

# ----- Nginx -----
NGINX_PORT=80

# ----- Security -----
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=http://localhost:3000,http://localhost

# ----- Application Settings -----
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.webp
PHOTOS_PER_PAGE=20

# Backward compatibility for legacy service key naming
S3_SERVICE_URL=https://s3.gra.cloud.ovh.net
