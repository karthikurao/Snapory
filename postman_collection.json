{
  "info": {
    "name": "Snapory Ingest API",
    "description": "Event photo ingestion service API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "eventId",
      "value": "",
      "type": "string"
    },
    {
      "key": "uploadToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Create Event",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.collectionVariables.set('eventId', jsonData.eventId);",
              "pm.collectionVariables.set('uploadToken', jsonData.uploadToken);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test Event\",\n  \"description\": \"Testing photo upload functionality\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/events",
          "host": ["{{baseUrl}}"],
          "path": ["events"]
        }
      }
    },
    {
      "name": "Get Event",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/events/{{eventId}}",
          "host": ["{{baseUrl}}"],
          "path": ["events", "{{eventId}}"]
        }
      }
    },
    {
      "name": "Upload Photos",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-Upload-Token",
            "value": "{{uploadToken}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "files",
              "type": "file",
              "src": []
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/events/{{eventId}}/photos",
          "host": ["{{baseUrl}}"],
          "path": ["events", "{{eventId}}", "photos"]
        }
      }
    }
  ]
}
